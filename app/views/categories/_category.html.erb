<div class="d-flex justify-content-between align-items-center position-relative" 
     id=<%= dom_id(category) %> data-categ-btn-target="div">
    <div class="btn-group container-fluid px-0">
        <%= link_to category.name, category_tasks_path(category.id), 
            data: { turbo_frame: "tasks_list",
                    # controller: "categ-btn",
                    "categ-btn-target": "button",
                    action: "click->categ-btn#add_active" 
                    },
            class: "text-start flex-grow-1 btn btn-outline-primary link-dark border-top-0 border-end-0 mb-1 border-primary-subtle" 
        %>
        <%= button_to "DEL", category, 
        method: :delete, 
        class:"btn btn-danger visually-hidden rounded-0 border-top-0 rounded-end-2", 
        form: { 
            data: { turbo_confirm: "Deleting a category will delete all of its task. Do you still want to proceed? ",
                    controller: "cat-del"
                }} %>
    </div>
        <% if category.task_count > 0 %>
            <span class="user-select-none z-1 position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <%= category.task_count %>
            </span>
        <% end %>
</div>