<%= turbo_frame_tag "edit_category" do %>
    <%= form_with(model: @category, url: user_category_path(current_user, @category)) do |form| %>
        <div class="d-grid gap-2">
            <div class="field form-floating">
                <%= form.text_field :name, required:true, autocomplete:"off", class:"form-control", placeholder:"title" %>
                <%= form.label :name, class:"form-label small" %>
            </div>

            <div class="field form-floating">
                <%= form.text_area :description, class:"form-control", placeholder:"description", style:"height:100px" %>
                <%= form.label :description, class:"form-label small" %>
            </div>

            <div class="actions d-grid">
                <%= form.submit class: "btn btn-outline-success" %>
            </div>
            <%= link_to "Cancel", category_tasks_path(@category), class:"btn btn-sm btn-outline-dark mb-3"  %>
        </div>
    <% end %>
<% end %>
     