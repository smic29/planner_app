<!DOCTYPE html>
<html>
  <head>
    <title>The Planner App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice %>
      <%= render 'shared/toast' %>
    <% end %>
  
    <%if user_signed_in? %>
    <header>
      <%= render 'shared/navbar' %>
    </header>
    <% end %>
    <main>
      <%= yield %>
    </main>
    <%= render 'shared/modal' %>
    <script>
      $('.toast').toast('show');
    </script>
  </body>
</html>
