 <div class="container mt-5">

 <%= turbo_frame_tag "login_signup_frame" do %> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if alert %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>
    <div class="field form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"email" %>
      <%= f.label :email %>
    </div>

    <div class="field form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-3", placeholder:"password" %>
      <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-check form-switch">
        <%= f.check_box :remember_me, class:"form-check-input", role:"switch" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "Log in", class:"btn btn-primary", data: { turbo_frame: "_top"} %>
    </div>
  <% end %>

<% end %>
  <%= render "devise/shared/links" %>

<%= link_to "Back", root_path, class:"btn btn-primary mt-5" %>
 </div>