<%= turbo_frame_tag "task" do %>
    <div id=<%= dom_id(task) %>>
        <div class="d-flex rounded p-1 border mb-1 align-items-center justify-content-between">
            <div>
                <div class="lead">
                    <%= task.title %>
                </div>
                <div class="d-flex small text-body-secondary">
                    <%= task.description %>
                    <%= task.finish_by %>
                </div>
            </div>
            <div class="small text-body-secondary">
                <%= "Added " + time_ago_in_words(task.created_at) + " ago" %>
            </div>
        </div>
    </div>
<% end %>