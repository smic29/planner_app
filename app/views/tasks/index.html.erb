 <%= turbo_frame_tag "tasks_list" do %>
    <div class="container shadow rounded p-3">
        <h1> Tasks for <%= @category.name %></h1>
        <p class="lead"><%= @category.description %></p>
        <p><%= @category.id %></p>
        <%= turbo_stream_from :task_list %>
        <div id="task_list">
            <div>
                <% if @tasks.any? %>
                        <% @tasks.each do |task| %>
                            <%= render 'tasks/task', task: task %>
                        <% end %>     
                <% end %>
            </div>
        </div>

        <%= turbo_frame_tag "new_task" do %> 
            <%= link_to "Add a task", new_category_task_path, class:"btn btn-outline-success" %>
        <% end %>
    </div>
<% end %>